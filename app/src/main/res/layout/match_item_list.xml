<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:layout_margin="4dp">
  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardElevation="8dp"
      app:cardCornerRadius="10dp"
      app:contentPadding="8dp">
      <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
          <TextView
                  android:id="@+id/date_match"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="20sp"
                  android:textColor="@color/colorPrimary"
                  android:layout_gravity="center_horizontal"/>
          <TextView
                  android:id="@+id/time_match"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="16sp"
                  android:textColor="@color/colorPrimary"
                  android:layout_gravity="center_horizontal"/>
          <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal">
              <TextView
                      android:id="@+id/home_fc_name"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="15sp"
                      android:gravity="end"
                      android:layout_centerVertical="true"
                      android:layout_toLeftOf="@id/home_score"
                      android:layout_toStartOf="@id/home_score"/>
              <TextView
                      android:id="@+id/home_score"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="18sp"
                      android:textColor="@android:color/black"
                      android:layout_toLeftOf="@id/vs_text"
                      android:layout_toStartOf="@id/vs_text"
                      android:layout_centerVertical="true"
                      android:paddingLeft="10dp"
                      android:paddingStart="10dp" />
              <TextView
                  android:id="@+id/vs_text"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/vs"
                  android:textSize="20sp"
                  android:textColor="@android:color/black"
                  android:layout_centerInParent="true"
                  android:padding="16dp"/>
              <TextView
                  android:id="@+id/away_score"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="18sp"
                  android:textColor="@android:color/black"
                  android:layout_toRightOf="@id/vs_text"
                  android:layout_toEndOf="@id/vs_text"
                  android:layout_centerVertical="true"
                  android:paddingEnd="10dp"
                  android:paddingRight="10dp" />
              <TextView
                  android:id="@+id/away_fc_name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="15sp"
                  android:gravity="start"
                  android:layout_centerVertical="true"
                  android:layout_toRightOf="@id/away_score"
                  android:layout_toEndOf="@id/away_score"/>
          </RelativeLayout>
      </LinearLayout>
      <ImageView
          android:id="@+id/btn_scheduler"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:src="@drawable/ic_notification"
          android:visibility="gone"
          android:layout_gravity="end"/>
  </android.support.v7.widget.CardView>
</RelativeLayout>